@page "/"

<PageTitle>Home</PageTitle>

<h1>Hello, world!</h1>

Welcome to your new app.

@inject RestauracjaContext Context

<table>
    <tr>
        <th>Id</th>
        <th>Nazwa</th>
        <th>Cena [zł]</th>
    </tr>
    @foreach (var m in Context.Menu)
    {
        <tr>
            <td>m.DishId</td>
            <td>m.Name</td>
            <td>m.Price</td>
        </tr>
    }
</table>
